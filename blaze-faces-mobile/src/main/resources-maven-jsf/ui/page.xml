	<attributes>
		<xi:include href="../entities/standard_uicomponent_attributes.xml" xpointer="xpointer(/component/attribute)"/>
		<attribute>
			<name>title</name>
			<required>false</required>
			<type>java.lang.String</type>
            <defaultValue></defaultValue>
            <description>Title of the page.</description>
		</attribute>
        <attribute>
			<name>defaultPageTransition</name>
