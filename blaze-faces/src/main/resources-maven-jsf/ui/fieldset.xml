<?xml version="1.0" encoding="UTF-8"?>
<component  xmlns="http://blazebit.com/jsf/component" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://blazebit.com/jsf/component ../misc/component.xsd">
	<tag>fieldset</tag>
	<componentClass>com.blazebit.blazefaces.component.fieldset.Fieldset</componentClass>
	<componentType>com.blazebit.blazefaces.component.Fieldset</componentType>
	<componentFamily>com.blazebit.blazefaces.component</componentFamily>
	<rendererType>com.blazebit.blazefaces.component.FieldsetRenderer</rendererType>
	<rendererClass>com.blazebit.blazefaces.component.fieldset.FieldsetRenderer</rendererClass>
	<parent>javax.faces.component.UIPanel</parent>
    <description>Fieldset is a grouping component with a title and content.</description>
    <interfaces>
		<interface>
			<name>com.blazebit.blazefaces.component.Widget</name>
		</interface>
        <interface>
			<name>javax.faces.component.behavior.ClientBehaviorHolder</name>
		</interface>
	</interfaces>
	<attributes>
		<xi:include href="./../entities/standard_uicomponent_attributes.xml" parse="text"/>
        <xi:include href="./../entities/widget_var_attribute.xml" parse="text"/>
        <attribute>
			<name>legend</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Title text.</description>
		</attribute>
		<attribute>
			<name>style</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Inline style of the fieldset.</description>
		</attribute>
		<attribute>
			<name>styleClass</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Style class of the fieldset.</description>
		</attribute>
         <attribute>
            <name>toggleable</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
            <defaultValue>false</defaultValue>
            <description>Makes content toggleable with animation. Default is false.</description>
        </attribute>
        <attribute>
            <name>toggleSpeed</name>
            <required>false</required>
            <type>java.lang.Integer</type>
            <defaultValue>500</defaultValue>
            <description>Sets toogle animation speed in milliseconds. Default is 500.</description>
        </attribute>
        <attribute>
            <name>collapsed</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
            <defaultValue>false</defaultValue>
            <description>Defines initial visibility state of content. Default is false.</description>
        </attribute>
	</attributes>
	    <resources>
        <resource>
			<name>blazefaces.css</name>
		</resource>
		<resource>
			<name>jquery/jquery.js</name>
		</resource>
        <resource>
			<name>blazefaces.js</name>
		</resource>
	</resources>
</component>