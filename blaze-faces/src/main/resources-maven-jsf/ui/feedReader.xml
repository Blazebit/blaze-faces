<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
]>
<component>
	<tag>feedReader</tag>
	<tagClass>com.blazebit.blazefaces.component.feedreader.FeedReaderTag</tagClass>
	<componentClass>com.blazebit.blazefaces.component.feedreader.FeedReader</componentClass>
	<componentType>com.blazebit.blazefaces.component.FeedReader</componentType>
	<componentFamily>com.blazebit.blazefaces.component</componentFamily>
	<rendererType>com.blazebit.blazefaces.component.FeedReaderRenderer</rendererType>
	<rendererClass>com.blazebit.blazefaces.component.feedreader.FeedReaderRenderer</rendererClass>
	<parent>javax.faces.component.UIComponentBase</parent>
    <description>feedReader displays content from a feed.</description>
	<attributes>
		&standard_uicomponent_attributes;
        <attribute>
			<name>value</name>
			<required>true</required>
			<type>java.lang.String</type>
            <description>URL of the feed.</description>
		</attribute>
        <attribute>
			<name>var</name>
			<required>true</required>
			<type>java.lang.String</type>
            <description>Iterator to refer each item in feed.</description>
		</attribute>
        <attribute>
			<name>size</name>
			<required>true</required>
			<type>java.lang.Integer</type>
            <defaultValue>java.lang.Integer.MAX_VALUE</defaultValue>
            <description>Number of items to display.</description>
		</attribute>
	</attributes>
</component>