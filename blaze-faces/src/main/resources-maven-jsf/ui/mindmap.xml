<?xml version="1.0" encoding="UTF-8"?>
<component  xmlns="http://blazebit.com/jsf/component" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://blazebit.com/jsf/component ../misc/component.xsd">
    <tag>mindmap</tag>
    <componentClass>com.blazebit.blazefaces.component.mindmap.Mindmap</componentClass>
    <componentType>com.blazebit.blazefaces.Mindmap</componentType>
    <componentFamily>com.blazebit.blazefaces</componentFamily>
    <rendererType>com.blazebit.blazefaces.component.MindmapRenderer</rendererType>
    <rendererClass>com.blazebit.blazefaces.component.mindmap.MindmapRenderer</rendererClass>
    <parent>javax.faces.component.UIComponentBase</parent>
    <description>
        MindMap is an interactive mindmapping component.
    </description>
    <interfaces>
        <interface>
            <name>com.blazebit.blazefaces.component.Widget</name>
        </interface>
        <interface>
            <name>javax.faces.component.behavior.ClientBehaviorHolder</name>
        </interface>
    </interfaces>
    <attributes>
		<xi:include href="./../entities/standard_uicomponent_attributes.xml" parse="text"/>
		<xi:include href="./../entities/widget_var_attribute.xml" parse="text"/>
        <attribute>
            <name>value</name>
            <required>false</required>
            <type>com.blazebit.blazefaces.model.mindmap.MindmapNode</type>
            <description>An com.blazebit.blazefaces.model.MindmapNode instance as the root node.</description>
        </attribute>
        <attribute>
            <name>style</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Inline style of the component</description>
        </attribute>
        <attribute>
            <name>styleClass</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Style class of the component.</description>
        </attribute>
        <attribute>
            <name>effectSpeed</name>
            <required>false</required>
            <type>java.lang.Integer</type>
            <defaultValue>300</defaultValue>
            <description>Speed of the animations in ms.</description>
        </attribute>
    </attributes>
    <resources>
        <resource>
            <name>blazefaces.css</name>
        </resource>
        <resource>
            <name>jquery/jquery.js</name>
        </resource>
        <resource>
            <name>blazefaces.js</name>
        </resource>
        <resource>
            <name>raphael/raphael.js</name>
        </resource>
        <resource>
            <name>mindmap/mindmap.js</name>
        </resource>
    </resources>
</component>