<?xml version="1.0" encoding="UTF-8"?>
<component  xmlns="http://blazebit.com/jsf/component" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://blazebit.com/jsf/component ../misc/component.xsd">
	<tag>gmap</tag>
	<componentClass>com.blazebit.blazefaces.component.gmap.GMap</componentClass>
	<componentType>com.blazebit.blazefaces.component.GMap</componentType>
	<componentFamily>com.blazebit.blazefaces.component</componentFamily>
	<rendererType>com.blazebit.blazefaces.component.GMapRenderer</rendererType>
	<rendererClass>com.blazebit.blazefaces.component.gmap.GMapRenderer</rendererClass>
	<parent>javax.faces.component.UIComponentBase</parent>
    <description>GMap component is built on Google Maps API Version 3. Gmap is highly integrated with JSF development model and enhanced with Ajax capabilities.</description>
    <interfaces>
		<interface>
			<name>com.blazebit.blazefaces.component.Widget</name>
		</interface>
        <interface>
			<name>javax.faces.component.behavior.ClientBehaviorHolder</name>
		</interface>
	</interfaces>
	<attributes>
		<xi:include href="./../entities/standard_uicomponent_attributes.xml" parse="text"/>
		<xi:include href="./../entities/widget_var_attribute.xml" parse="text"/>
		<attribute>
			<name>model</name>
			<required>false</required>
			<type>com.blazebit.blazefaces.model.map.MapModel</type>
            <description>An com.blazebit.blazefaces.model.MapModel instance.</description>
		</attribute>
		<attribute>
			<name>style</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Inline style of the map container.</description>
		</attribute>
		<attribute>
			<name>styleClass</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Style class of the map container.</description>
		</attribute>
		<attribute>
			<name>type</name>
			<required>true</required>
			<type>java.lang.String</type>
            <description>Type of the map. Required.</description>
		</attribute>
		<attribute>
			<name>center</name>
			<required>true</required>
			<type>java.lang.String</type>
            <description>Center point of the map. Required.</description>
		</attribute>
		<attribute>
			<name>zoom</name>
			<required>true</required>
			<type>java.lang.Integer</type>
			<defaultValue>8</defaultValue>
            <description>Defines the initial zoom level. Default is 8.</description>
		</attribute>
		<attribute>
			<name>streetView</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
            <description>Controls street view support. Default is false.</description>
		</attribute>
		<attribute>
			<name>disableDefaultUI</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
            <description>Disables default UI controls. Default is false.</description>
		</attribute>
		<attribute>
			<name>navigationControl</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>true</defaultValue>
            <description>Defines visibility of navigation control. Default is true.</description>
		</attribute>
		<attribute>
			<name>mapTypeControl</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>true</defaultValue>
            <description>Defines visibility of map type control. Default is true.</description>
		</attribute>
		<attribute>
			<name>draggable</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>true</defaultValue>
            <description>Defines draggability of map. Default is true.</description>
		</attribute>
		<attribute>
			<name>disableDoubleClickZoom</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
            <description>Disables zooming on mouse double click. Default is false.</description>
		</attribute>
		<attribute>
			<name>onPointClick</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Javascript callback to execute when a point on map is clicked.</description>
		</attribute>
        <attribute>
			<name>fitBounds</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
            <description>Defines setting center and zoom values auto by included overlays on startup. Default value is false</description>
		</attribute>
	</attributes>
	<resources>
		<resource>
			<name>jquery/jquery.js</name>
		</resource>
		<resource>
			<name>blazefaces.js</name>
		</resource>
		<resource>
			<name>gmap/gmap.js</name>
		</resource>
	</resources>
</component>