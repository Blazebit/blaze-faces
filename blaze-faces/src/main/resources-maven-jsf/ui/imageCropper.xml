<?xml version="1.0" encoding="UTF-8"?>
<component  xmlns="http://blazebit.com/jsf/component" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://blazebit.com/jsf/component ../misc/component.xsd">
	<tag>imageCropper</tag>
	<componentClass>com.blazebit.blazefaces.component.imagecropper.ImageCropper</componentClass>
	<componentType>com.blazebit.blazefaces.component.ImageCropper</componentType>
	<componentFamily>com.blazebit.blazefaces.component</componentFamily>
	<rendererType>com.blazebit.blazefaces.component.ImageCropperRenderer</rendererType>
	<rendererClass>com.blazebit.blazefaces.component.imagecropper.ImageCropperRenderer</rendererClass>
	<parent>javax.faces.component.UIInput</parent>
    <description>ImageCropper allows cropping a certain region of an image. A new image is created containing the cropped area and assigned to a CroppedImage instanced on the server side.</description>
    <interfaces>
		<interface>
			<name>com.blazebit.blazefaces.component.Widget</name>
		</interface>
	</interfaces>
	<attributes>
		<xi:include href="./../entities/input_component_attributes.xml" parse="text"/>
		<xi:include href="./../entities/widget_var_attribute.xml" parse="text"/>
		<attribute>
			<name>image</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Context relative path to the image.</description>
		</attribute>
        <attribute>
			<name>alt</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Alternate text of the image.</description>
		</attribute>
        <attribute>
			<name>aspectRatio</name>
			<required>false</required>
			<type>java.lang.Double</type>
            <defaultValue>java.lang.Double.MIN_VALUE</defaultValue>
            <description>Aspect ratio of the cropper area. Default is min integer value.</description>
		</attribute>
        <attribute>
			<name>minSize</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Minimum size of the cropper area.</description>
		</attribute>
        <attribute>
			<name>maxSize</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Maximum size of the cropper area.</description>
		</attribute>
        <attribute>
			<name>backgroundColor</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Background color of the container.</description>
		</attribute>
        <attribute>
			<name>backgroundOpacity</name>
			<required>false</required>
			<type>java.lang.Double</type>
            <defaultValue>0.6</defaultValue>
            <description>Background opacity of the container. Default is 0.6</description>
		</attribute>
        <attribute>
			<name>initialCoords</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Initial coordinates of the cropper area.</description>
		</attribute>
	</attributes>
	<resources>
		<resource>
			<name>imagecropper/imagecropper.css</name>
		</resource>
		<resource>
			<name>jquery/jquery.js</name>
		</resource>
		<resource>
			<name>blazefaces.js</name>
		</resource>
		<resource>
			<name>imagecropper/imagecropper.js</name>
		</resource>
	</resources>
</component>