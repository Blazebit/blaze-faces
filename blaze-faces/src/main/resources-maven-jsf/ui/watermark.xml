<?xml version="1.0" encoding="UTF-8"?>
<component  xmlns="http://blazebit.com/jsf/component"
			xmlns:xi="http://www.w3.org/2001/XInclude"
			xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			xsi:schemaLocation="http://blazebit.com/jsf/component ../misc/component.xsd">
			
	<tag>watermark</tag>
	<componentClass>com.blazebit.blazefaces.component.watermark.Watermark</componentClass>
	<componentType>com.blazebit.blazefaces.component.Watermark</componentType>
	<componentFamily>com.blazebit.blazefaces.component</componentFamily>
	<rendererType>com.blazebit.blazefaces.component.WatermarkRenderer</rendererType>
	<rendererClass>com.blazebit.blazefaces.component.watermark.WatermarkRenderer</rendererClass>
	<parent>javax.faces.component.UIComponentBase</parent>
    <description>Watermark displays a hint on an input field.</description>
    <interfaces>
		<interface>
			<name>com.blazebit.blazefaces.component.Widget</name>
		</interface>
	</interfaces>
	<attributes>
		<xi:include href="./../entities/standard_uicomponent_attributes.xml" parse="text"/>
		<xi:include href="./../entities/widget_var_attribute.xml" parse="text"/>
		<attribute>
			<name>value</name>
			<required>true</required>
			<type>java.lang.String</type>
            <description>Text of watermark. Required.</description>
		</attribute>
		<attribute>
			<name>for</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Id of the component to attach the watermark.</description>
		</attribute>
		<attribute>
			<name>forElement</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>jQuery selector to attach the watermark.</description>
		</attribute>
	</attributes>
	<resources>
		<resource>
			<name>watermark/watermark.css</name>
		</resource>
		<resource>
			<name>jquery/jquery.js</name>
		</resource>
		<resource>
			<name>blazefaces.js</name>
		</resource>
        <resource>
			<name>watermark/watermark.js</name>
		</resource>
	</resources>
</component>
