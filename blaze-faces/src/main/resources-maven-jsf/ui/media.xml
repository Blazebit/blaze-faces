<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE component SYSTEM "../misc/component.dtd" [
<!ENTITY standard_uicomponent_attributes		SYSTEM "../entities/standard_uicomponent_attributes.xml">
<!ENTITY widget_var_attribute					SYSTEM "../entities/widget_var_attribute.xml">
]>
<component>
	<tag>media</tag>
	<componentClass>com.blazebit.blazefaces.component.media.Media</componentClass>
	<componentType>com.blazebit.blazefaces.component.Media</componentType>
	<componentFamily>com.blazebit.blazefaces.component</componentFamily>
	<rendererType>com.blazebit.blazefaces.component.MediaRenderer</rendererType>
	<rendererClass>com.blazebit.blazefaces.component.media.MediaRenderer</rendererClass>
	<parent>javax.faces.component.UIComponentBase</parent>
    <description>Media component is used for embedding multimedia content such as videos and music to JSF views. Media renders object or embed html tags depending on the user client.</description>
	<attributes>
		&standard_uicomponent_attributes;
		<attribute>
			<name>value</name>
			<required>false</required>
			<type>java.lang.Object</type>
            <description>Media source to play.</description>
		</attribute>
		<attribute>
			<name>player</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Type of the player, possible values are "quicktime","windows","flash","real".</description>
		</attribute>
		<attribute>
			<name>width</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Width of the player.</description>
		</attribute>
		<attribute>
			<name>height</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Height of the player.</description>
		</attribute>
		<attribute>
			<name>style</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Style of the player.</description>
		</attribute>
		<attribute>
			<name>styleClass</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Style class of the player.</description>
		</attribute>
	</attributes>
</component>