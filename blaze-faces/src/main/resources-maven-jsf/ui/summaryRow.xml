<?xml version="1.0" encoding="UTF-8"?>
<component  xmlns="http://blazebit.com/jsf/component"
			xmlns:xi="http://www.w3.org/2001/XInclude"
			xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			xsi:schemaLocation="http://blazebit.com/jsf/component ../misc/component.xsd">
	<tag>summaryRow</tag>
	<componentClass>com.blazebit.blazefaces.component.summaryrow.SummaryRow</componentClass>
    <componentHandlerClass>com.blazebit.blazefaces.component.summaryrow.SummaryRowHandler</componentHandlerClass>
	<componentType>com.blazebit.blazefaces.component.SummaryRow</componentType>
	<componentFamily>com.blazebit.blazefaces.component</componentFamily>
    <rendererType>com.blazebit.blazefaces.component.SummaryRowRenderer</rendererType>
	<rendererClass>com.blazebit.blazefaces.component.summaryrow.SummaryRowRenderer</rendererClass>
	<parent>javax.faces.component.UIComponentBase</parent>
    <description>SummaryRow is a helper component for data grouping.</description>
	<attributes>
		<xi:include href="./../entities/standard_uicomponent_attributes.xml" parse="text"/>
        <attribute>
			<name>listener</name>
			<required>false</required>
			<type>javax.el.MethodExpression</type>
			<method-signature>void listener(Object groupBy)</method-signature>
            <description>Method expression to execute before rendering summary row. (e.g. to calculate totals)</description>
		</attribute>
	</attributes>
</component>
