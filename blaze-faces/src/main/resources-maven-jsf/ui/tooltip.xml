<?xml version="1.0" encoding="UTF-8"?>
<component  xmlns="http://blazebit.com/jsf/component"
			xmlns:xi="http://www.w3.org/2001/XInclude"
			xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			xsi:schemaLocation="http://blazebit.com/jsf/component ../misc/component.xsd">
	<tag>tooltip</tag>
	<componentClass>com.blazebit.blazefaces.component.tooltip.Tooltip</componentClass>
	<componentType>com.blazebit.blazefaces.component.Tooltip</componentType>
	<componentFamily>com.blazebit.blazefaces.component</componentFamily>
	<rendererType>com.blazebit.blazefaces.component.TooltipRenderer</rendererType>
	<rendererClass>com.blazebit.blazefaces.component.tooltip.TooltipRenderer</rendererClass>
	<parent>javax.faces.component.UIOutput</parent>
    <description>Tooltip goes beyond the legacy html title attribute by providing custom effects, events and html content support.</description>
     <interfaces>
		<interface>
			<name>com.blazebit.blazefaces.component.Widget</name>
		</interface>
	</interfaces>
	<attributes>
		<xi:include href="./../entities/output_component_attributes.xml" parse="text"/>
		<xi:include href="./../entities/widget_var_attribute.xml" parse="text"/>
		<attribute>
			<name>showEvent</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Event displaying the tooltip. Default is mouseover.</description>
		</attribute>
		<attribute>
			<name>showEffect</name>
			<required>false</required>
			<type>java.lang.String</type>
			<defaultValue>fade</defaultValue>
            <description>Effect to be used for displaying. Default is fade.</description>
		</attribute>
		<attribute>
			<name>hideEvent</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Event hiding the tooltip. Default is mouseout.</description>
		</attribute>
		<attribute>
			<name>hideEffect</name>
			<required>false</required>
			<type>java.lang.String</type>
			<defaultValue>fade</defaultValue>
            <description>Effect to be used for hiding. Default is fade.</description>
		</attribute>
		<attribute>
			<name>for</name>
			<required>true</required>
			<type>java.lang.String</type>
            <description>Id of the component to attach the tooltip.</description>
		</attribute>
        <attribute>
			<name>style</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Inline style of the tooltip.</description>
		</attribute>
		<attribute>
			<name>styleClass</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Style class of the tooltip.</description>
		</attribute>
	</attributes>
    <resources>
        <resource>
			<name>blazefaces.css</name>
		</resource>
		<resource>
			<name>jquery/jquery.js</name>
		</resource>
        <resource>
			<name>blazefaces.js</name>
		</resource>
	</resources>
</component>
