<?xml version="1.0" encoding="UTF-8"?>
<component  xmlns="http://blazebit.com/jsf/component"
			xmlns:xi="http://www.w3.org/2001/XInclude"
			xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			xsi:schemaLocation="http://blazebit.com/jsf/component ../misc/component.xsd">
	<tag>socket</tag>
	<componentClass>com.blazebit.blazefaces.component.socket.Socket</componentClass>
	<componentType>com.blazebit.blazefaces.component.Socket</componentType>
	<componentFamily>com.blazebit.blazefaces.component</componentFamily>
	<rendererType>com.blazebit.blazefaces.component.SocketRenderer</rendererType>
	<rendererClass>com.blazebit.blazefaces.component.socket.SocketRenderer</rendererClass>
	<parent>javax.faces.component.UIComponentBase</parent>
    <description>Socket component is an agent that creates a channel between the server and the client.</description>
    <interfaces>
		<interface>
			<name>com.blazebit.blazefaces.component.Widget</name>
		</interface>
        <interface>
			<name>javax.faces.component.behavior.ClientBehaviorHolder</name>
		</interface>
	</interfaces>
	<attributes>
		<xi:include href="./../entities/standard_uicomponent_attributes.xml" parse="text"/>
		<xi:include href="./../entities/widget_var_attribute.xml" parse="text"/>
		<attribute>
			<name>channel</name>
			<required>true</required>
			<type>java.lang.String</type>
            <description>Channel name of the connection.</description>
		</attribute>
        <attribute>
			<name>transport</name>
			<required>false</required>
			<type>java.lang.String</type>
            <defaultValue>websocket</defaultValue>
            <description>Desired protocol to be used valid values are websocket (default), sse, streaming, long-polling, jsonp. Default is websocket.</description>
		</attribute>
		<attribute>
			<name>fallbackTransport</name>
			<required>false</required>
			<type>java.lang.String</type>
            <defaultValue>long-polling</defaultValue>
            <description>Desired protocol to be used valid values are websocket, sse, streaming, long-polling (default), jsonp. Default is websocket.</description>
		</attribute>
		<attribute>
			<name>onMessage</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Javascript event handler that is processed when the server publishes data.</description>
		</attribute>
        <attribute>
			<name>onError</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Javascript event handler that is processed when there is an error.</description>
		</attribute>
        <attribute>
			<name>autoConnect</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
            <defaultValue>true</defaultValue>
            <description>Defines if client should connect to the channel on page load.</description>
		</attribute>
	</attributes>
	<resources>
		<resource>
			<name>jquery/jquery.js</name>
		</resource>
		<resource>
			<name>blazefaces.js</name>
		</resource>
        <resource>
            <name>push/push.js</name>
        </resource>
	</resources>
</component>