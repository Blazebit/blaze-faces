<?xml version="1.0" encoding="UTF-8"?>
<component  xmlns="http://blazebit.com/jsf/component"
			xmlns:xi="http://www.w3.org/2001/XInclude"
			xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			xsi:schemaLocation="http://blazebit.com/jsf/component ../misc/component.xsd">
	<tag>tree</tag>
	<componentClass>com.blazebit.blazefaces.component.tree.Tree</componentClass>
	<componentType>com.blazebit.blazefaces.component.Tree</componentType>
	<componentFamily>com.blazebit.blazefaces.component</componentFamily>
	<rendererType>com.blazebit.blazefaces.component.TreeRenderer</rendererType>
	<rendererClass>com.blazebit.blazefaces.component.tree.TreeRenderer</rendererClass>
	<parent>com.blazebit.blazefaces.component.UITree</parent>
    <description>Tree is is used for displaying hierarchical data and creating site navigations.</description>
    <interfaces>
		<interface>
			<name>com.blazebit.blazefaces.component.Widget</name>
		</interface>
        <interface>
			<name>javax.faces.component.behavior.ClientBehaviorHolder</name>
		</interface>
	</interfaces>
	<attributes>
		<xi:include href="./../entities/standard_uicomponent_attributes.xml" parse="text"/>
		<xi:include href="./../entities/widget_var_attribute.xml" parse="text"/>
		<attribute>
			<name>value</name>
			<required>false</required>
			<type>java.lang.Object</type>
            <ignoreInComponent>true</ignoreInComponent>
            <description>A TreeNode instance as the backing model.</description>
		</attribute>
		<attribute>
			<name>var</name>
			<required>false</required>
			<type>java.lang.String</type>
            <ignoreInComponent>true</ignoreInComponent>
            <description>Name of the request-scoped variable that'll be used to refer each treenode data during rendering.</description>
		</attribute>
		<attribute>
			<name>dynamic</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
            <description>Specifies the ajax/client toggleMode. Default is false.</description>
		</attribute>
		<attribute>
			<name>cache</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>true</defaultValue>
            <description>Specifies caching on dynamically loaded nodes. When set to true expanded nodes will be kept in memory. Default is true.</description>
		</attribute>
		<attribute>
			<name>onNodeClick</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Javascript event to process when a tree node is clicked.</description>
		</attribute>
		<attribute>
			<name>selection</name>
			<required>false</required>
			<type>java.lang.Object</type>
            <description>TreeNode array to reference the selections.</description>
		</attribute>
		<attribute>
			<name>style</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Style of the main container element of tree.</description>
		</attribute>
		<attribute>
			<name>styleClass</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Style class of the main container element of tree.</description>
		</attribute>
		<attribute>
			<name>selectionMode</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Defines the selectionMode.</description>
		</attribute>
        <attribute>
			<name>highlight</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
            <defaultValue>true</defaultValue>
            <description>Highlights nodes on hover when selection is enabled, set to false to disable highlighting.</description>
		</attribute>
        <attribute>
			<name>datakey</name>
			<required>false</required>
			<type>java.lang.Object</type>
            <description>Unique key of the data presented by tree nodes.</description>
		</attribute>
	</attributes>
    <resources>
        <resource>
			<name>blazefaces.css</name>
		</resource>
		<resource>
			<name>jquery/jquery.js</name>
		</resource>
        <resource>
			<name>blazefaces.js</name>
		</resource>
	</resources>
</component>
