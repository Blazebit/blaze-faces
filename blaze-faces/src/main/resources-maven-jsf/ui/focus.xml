<?xml version="1.0" encoding="UTF-8"?>
<component  xmlns="http://blazebit.com/jsf/component" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://blazebit.com/jsf/component ../misc/component.xsd">
	<tag>focus</tag>
	<componentClass>com.blazebit.blazefaces.component.focus.Focus</componentClass>
	<componentType>com.blazebit.blazefaces.component.Focus</componentType>
	<componentFamily>com.blazebit.blazefaces.component</componentFamily>
	<rendererType>com.blazebit.blazefaces.component.FocusRenderer</rendererType>
	<rendererClass>com.blazebit.blazefaces.component.focus.FocusRenderer</rendererClass>
	<parent>javax.faces.component.UIComponentBase</parent>
    <description>Focus is a handy component that makes it easy to manage the element focus on a JSF page.</description>
	<attributes>
		<xi:include href="./../entities/standard_uicomponent_attributes.xml" parse="text"/>
		<attribute>
			<name>for</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Specifies the exact component to set focus.</description>
		</attribute>
		<attribute>
			<name>context</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>The root component to start first input search.</description>
		</attribute>
		<attribute>
			<name>minSeverity</name>
			<required>false</required>
			<type>java.lang.String</type>
			<defaultValue>error</defaultValue>
            <description>Minimum severity level to be used when finding the first invalid component.</description>
		</attribute>
	</attributes>
	<resources>
		<resource>
			<name>jquery/jquery.js</name>
		</resource>
		<resource>
			<name>blazefaces.js</name>
		</resource>
	</resources>
</component>