<?xml version="1.0" encoding="UTF-8"?>
<component  xmlns="http://blazebit.com/jsf/component" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://blazebit.com/jsf/component ../misc/component.xsd">
	<tag>password</tag>
	<componentClass>com.blazebit.blazefaces.component.password.Password</componentClass>
	<componentType>com.blazebit.blazefaces.component.Password</componentType>
	<componentFamily>com.blazebit.blazefaces.component</componentFamily>
	<rendererType>com.blazebit.blazefaces.component.PasswordRenderer</rendererType>
	<rendererClass>com.blazebit.blazefaces.component.password.PasswordRenderer</rendererClass>
	<parent>javax.faces.component.html.HtmlInputText</parent>
    <description>Password component is an extended version of standard inputSecret component with theme integration and strength indicator.</description>
    <interfaces>
		<interface>
			<name>com.blazebit.blazefaces.component.Widget</name>
		</interface>
	</interfaces>
	<attributes>
		<xi:include href="./../entities/input_component_attributes.xml" parse="text"/>
		<xi:include href="./../entities/html_input_text_attributes.xml" parse="text"/>
		<xi:include href="./../entities/widget_var_attribute.xml" parse="text"/>
        <attribute>
			<name>feedback</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
            <description>Enables strength indicator. Default is false.</description>
		</attribute>
		<attribute>
			<name>inline</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
            <description>Displays feedback inline rather than using a popup. Default is false.</description>
		</attribute>
		<attribute>
			<name>promptLabel</name>
			<required>false</required>
			<type>java.lang.String</type>
			<defaultValue>Please enter a password</defaultValue>
            <description>Label of prompt. Default is "Please enter a password"</description>
		</attribute>
		<attribute>
			<name>weakLabel</name>
			<required>false</required>
			<type>java.lang.String</type>
			<defaultValue>Weak</defaultValue>
            <description>Label of weak password. Default is "Weak"</description>
		</attribute>
		<attribute>
			<name>goodLabel</name>
			<required>false</required>
			<type>java.lang.String</type>
			<defaultValue>Good</defaultValue>
            <description>Label of good password. Default is "Good"</description>
		</attribute>
		<attribute>
			<name>strongLabel</name>
			<required>false</required>
			<type>java.lang.String</type>
			<defaultValue>Strong</defaultValue>
            <description>Label of strong password. Default is "Strong"</description>
		</attribute>
        <attribute>
			<name>redisplay</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
            <description>Boolean flag indicating whether or not a previously entered password should be rendered in form. Default is false.</description>
		</attribute>
        <attribute>
			<name>match</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Identifier of another password component to match value against.</description>
		</attribute>
	</attributes>
	<resources>
        <resource>
			<name>blazefaces.css</name>
		</resource>
		<resource>
			<name>jquery/jquery.js</name>
		</resource>
		<resource>
			<name>blazefaces.js</name>
		</resource>
	</resources>
</component>