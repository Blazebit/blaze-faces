]>
<component>
	<tag>panelGrid</tag>
	<tagClass>com.blazebit.blazefaces.component.panelgrid.PanelGridTag</tagClass>
	<componentClass>com.blazebit.blazefaces.component.panelgrid.PanelGrid</componentClass>
	<componentType>com.blazebit.blazefaces.component.PanelGrid</componentType>
	<componentFamily>com.blazebit.blazefaces.component</componentFamily>
	<rendererType>com.blazebit.blazefaces.component.PanelGridRenderer</rendererType>
	<rendererClass>com.blazebit.blazefaces.component.panelgrid.PanelGridRenderer</rendererClass>
	<parent>javax.faces.component.UIPanel</parent>
