            <description>Number of columns of the table.</description>
		</attribute>
        <attribute>
			<name>style</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Inline style of the table.</description>
		</attribute>
		<attribute>
			<name>styleClass</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Style class of the table.</description>
		</attribute>
        <attribute>
			<name>columnClasses</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Comma separated list of column style classes.</description>
		</attribute>
	</attributes>
	<resources>
        <resource>
			<name>blazefaces.css</name>
		</resource>
