<?xml version="1.0" encoding="UTF-8"?>
<component  xmlns="http://blazebit.com/jsf/component" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://blazebit.com/jsf/component ../misc/component.xsd">
	<tag>editor</tag>
	<componentClass>com.blazebit.blazefaces.component.editor.Editor</componentClass>
	<componentType>com.blazebit.blazefaces.component.Editor</componentType>
	<componentFamily>com.blazebit.blazefaces.component</componentFamily>
	<rendererType>com.blazebit.blazefaces.component.EditorRenderer</rendererType>
	<rendererClass>com.blazebit.blazefaces.component.editor.EditorRenderer</rendererClass>
	<parent>javax.faces.component.UIInput</parent>
    <description>Editor is an input component with rich text editing capabilities.</description>
    <interfaces>
		<interface>
			<name>com.blazebit.blazefaces.component.Widget</name>
		</interface>
	</interfaces>
	<attributes>
		<xi:include href="./../entities/input_component_attributes.xml" parse="text"/>
		<xi:include href="./../entities/widget_var_attribute.xml" parse="text"/>
        <attribute>
			<name>controls</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>List of controls to customize toolbar.</description>
		</attribute>
		<attribute>
			<name>height</name>
			<required>false</required>
			<type>java.lang.Integer</type>
			<defaultValue>java.lang.Integer.MIN_VALUE</defaultValue>
            <description>Height of the editor. Default is min integer value.</description>
		</attribute>
        <attribute>
			<name>width</name>
			<required>false</required>
			<type>java.lang.Integer</type>
			<defaultValue>java.lang.Integer.MIN_VALUE</defaultValue>
            <description>Width of the editor. Default is min integer value.</description>
		</attribute>
		<attribute>
			<name>disabled</name>
			<required>false</required>
			<type>java.lang.Boolean</type>
			<defaultValue>false</defaultValue>
            <description>Disables editor.</description>
		</attribute>
        <attribute>
			<name>style</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Inline style of the editor container.</description>
		</attribute>
        <attribute>
			<name>styleClass</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Style class of the editor container.</description>
		</attribute>
        <attribute>
			<name>onchange</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Client side callback to execute when editor data changes.</description>
		</attribute>
	</attributes>
	<resources>
		<resource>
			<name>editor/editor.css</name>
		</resource>
		<resource>
			<name>jquery/jquery.js</name>
		</resource>
		<resource>
			<name>blazefaces.js</name>
		</resource>
		<resource>
			<name>editor/editor.js</name>
		</resource>
	</resources>
</component>