<?xml version="1.0" encoding="UTF-8"?>
<component  xmlns="http://blazebit.com/jsf/component" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://blazebit.com/jsf/component ../misc/component.xsd">
	<tag>menubar</tag>
	<componentClass>com.blazebit.blazefaces.component.menubar.Menubar</componentClass>
	<componentType>com.blazebit.blazefaces.component.Menubar</componentType>
	<componentFamily>com.blazebit.blazefaces.component</componentFamily>
	<rendererType>com.blazebit.blazefaces.component.MenubarRenderer</rendererType>
	<rendererClass>com.blazebit.blazefaces.component.menubar.MenubarRenderer</rendererClass>
	<parent>com.blazebit.blazefaces.component.menu.AbstractMenu</parent>
    <description>Menubar is a horizontal navigation component.</description>
    <interfaces>
		<interface>
			<name>com.blazebit.blazefaces.component.Widget</name>
		</interface>
	</interfaces>
	<attributes>
		<xi:include href="./../entities/standard_uicomponent_attributes.xml" parse="text"/>
		<xi:include href="./../entities/widget_var_attribute.xml" parse="text"/>
		<attribute>
			<name>model</name>
			<required>false</required>
			<type>com.blazebit.blazefaces.model.MenuModel</type>
            <description>MenuModel instance to create menus programmatically.</description>
		</attribute>
        <attribute>
            <name>style</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Inline style of menubar.</description>
        </attribute>
        <attribute>
            <name>styleClass</name>
            <required>false</required>
            <type>java.lang.String</type>
            <description>Style class of menubar.</description>
        </attribute>
        <attribute>
            <name>autoDisplay</name>
            <required>false</required>
            <type>java.lang.Boolean</type>
            <defaultValue>true</defaultValue>
            <description>Defines whether the first level of submenus will be displayed on mouseover or not. When
            set to false, click event is required to display.</description>
        </attribute>
	</attributes>
	<resources>
        <resource>
			<name>blazefaces.css</name>
		</resource>
		<resource>
			<name>jquery/jquery.js</name>
		</resource>
        <resource>
			<name>blazefaces.js</name>
		</resource>
	</resources>
</component>