<?xml version="1.0" encoding="UTF-8"?>
<component  xmlns="http://blazebit.com/jsf/component"
			xmlns:xi="http://www.w3.org/2001/XInclude"
			xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			xsi:schemaLocation="http://blazebit.com/jsf/component ../misc/component.xsd">
	<tag>submenu</tag>
	<componentClass>com.blazebit.blazefaces.component.submenu.Submenu</componentClass>
	<componentType>com.blazebit.blazefaces.component.Submenu</componentType>
	<componentFamily>com.blazebit.blazefaces.component</componentFamily>
	<parent>javax.faces.component.UIComponentBase</parent>
    <description>Submenu is nested in menu components and represents a sub menu items.</description>
	<interfaces>
		<interface>
			<name>java.io.Serializable</name>
		</interface>
	</interfaces>
	<attributes>
		<xi:include href="./../entities/standard_uicomponent_attributes.xml" parse="text"/>
		<xi:include href="./../entities/widget_var_attribute.xml" parse="text"/>
		<attribute>
			<name>label</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Label of the submenu header.</description>
		</attribute>
        <attribute>
			<name>icon</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Icon of a submenu, see menuitem to see how it is used.</description>
		</attribute>
        <attribute>
			<name>style</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Inline style of the menu.</description>
		</attribute>
        <attribute>
			<name>styleClass</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Style class of the submenu.</description>
		</attribute>
	</attributes>
</component>
