<?xml version="1.0" encoding="UTF-8"?>
<component  xmlns="http://blazebit.com/jsf/component" xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://blazebit.com/jsf/component ../misc/component.xsd">
	<tag>effect</tag>
	<componentClass>com.blazebit.blazefaces.component.effect.Effect</componentClass>
	<componentType>com.blazebit.blazefaces.component.Effect</componentType>
	<componentFamily>com.blazebit.blazefaces.component</componentFamily>
	<rendererType>com.blazebit.blazefaces.component.EffectRenderer</rendererType>
	<rendererClass>com.blazebit.blazefaces.component.effect.EffectRenderer</rendererClass>
	<parent>javax.faces.component.UIComponentBase</parent>
    <description>Effect component is based on the jQuery UI effects library.</description>
    <interfaces>
		<interface>
			<name>com.blazebit.blazefaces.component.Widget</name>
		</interface>
	</interfaces>
	<attributes>
		<xi:include href="./../entities/standard_uicomponent_attributes.xml" parse="text"/>
        <xi:include href="./../entities/widget_var_attribute.xml" parse="text"/>
		<attribute>
			<name>event</name>
			<required>true</required>
			<type>java.lang.String</type>
            <description>Dom event to attach the event that executes the animation. Required.</description>
		</attribute>
		<attribute>
			<name>type</name>
			<required>true</required>
			<type>java.lang.String</type>
            <description>Specifies the name of the animation. Required.</description>
		</attribute>
		<attribute>
			<name>for</name>
			<required>false</required>
			<type>java.lang.String</type>
            <description>Component that is animated.</description>
		</attribute>
		<attribute>
			<name>speed</name>
			<required>false</required>
			<type>java.lang.Integer</type>
			<defaultValue>1000</defaultValue>
            <description>Speed of the animation in ms. Default is 1000.</description>
		</attribute>
        <attribute>
			<name>delay</name>
			<required>false</required>
			<type>java.lang.Integer</type>
			<defaultValue>0</defaultValue>
            <description>Startup delay on firing animation.</description>
		</attribute>
	</attributes>
	<resources>
		<resource>
			<name>jquery/jquery.js</name>
		</resource>
        <resource>
			<name>blazefaces.js</name>
		</resource>
	</resources>
</component>