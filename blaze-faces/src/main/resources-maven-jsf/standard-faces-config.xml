<?xml version="1.0" encoding="UTF-8"?>
<faces-config>
    <name>blazefaces</name>
    
    <factory>
        <partial-view-context-factory>
            com.blazebit.blazefaces.context.BlazePartialViewContextFactory
        </partial-view-context-factory>
    </factory>

    <application>
        <resource-handler>com.blazebit.blazefaces.application.BlazeResourceHandler</resource-handler>
        <system-event-listener>
            <source-class>javax.faces.application.Application</source-class>
            <system-event-class>javax.faces.event.PostConstructApplicationEvent</system-event-class>
            <system-event-listener-class>com.blazebit.blazefaces.webapp.PostConstructApplicationEventListener</system-event-listener-class>
        </system-event-listener>
        <system-event-listener>
            <source-class>com.blazebit.blazefaces.component.messages.Messages</source-class>
            <system-event-class>javax.faces.event.PostAddToViewEvent</system-event-class>
            <system-event-listener-class>com.blazebit.blazefaces.event.AutoUpdateComponentListener</system-event-listener-class>
        </system-event-listener>
        <system-event-listener>
            <source-class>com.blazebit.blazefaces.component.growl.Growl</source-class>
            <system-event-class>javax.faces.event.PostAddToViewEvent</system-event-class>
            <system-event-listener-class>com.blazebit.blazefaces.event.AutoUpdateComponentListener</system-event-listener-class>
        </system-event-listener>
        <system-event-listener>
            <source-class>com.blazebit.blazefaces.component.outputpanel.OutputPanel</source-class>
            <system-event-class>javax.faces.event.PostAddToViewEvent</system-event-class>
            <system-event-listener-class>com.blazebit.blazefaces.event.AutoUpdateComponentListener</system-event-listener-class>
        </system-event-listener>
    </application>
    
    <behavior>
        <behavior-id>com.blazebit.blazefaces.behavior.AjaxBehavior</behavior-id>
        <behavior-class>com.blazebit.blazefaces.behavior.ajax.AjaxBehavior</behavior-class>
    </behavior>
    <behavior>
        <behavior-id>com.blazebit.blazefaces.component.PrinterBehavior</behavior-id>
        <behavior-class>com.blazebit.blazefaces.behavior.printer.PrinterBehavior</behavior-class>
    </behavior>
    <behavior>
        <behavior-id>com.blazebit.blazefaces.behavior.InvokeBehavior</behavior-id>
        <behavior-class>com.blazebit.blazefaces.behavior.invoke.InvokeBehavior</behavior-class>
    </behavior>
    <behavior>
        <behavior-id>com.blazebit.blazefaces.behavior.ShowBehavior</behavior-id>
        <behavior-class>com.blazebit.blazefaces.behavior.show.ShowBehavior</behavior-class>
    </behavior>
    <behavior>
        <behavior-id>com.blazebit.blazefaces.behavior.HideBehavior</behavior-id>
        <behavior-class>com.blazebit.blazefaces.behavior.hide.HideBehavior</behavior-class>
    </behavior>
    <component>
        <component-type>com.blazebit.blazefaces.behavior.handler.EventHandler</component-type>
        <component-class>com.blazebit.blazefaces.behavior.handler.EventHandler</component-class>
    </component>
</faces-config>